<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Título del carrito -->
    <TextView
        android:id="@+id/tvTituloCarrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu Carrito"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:layout_alignParentTop="true" /> <!-- Alineado al principio -->

    <!-- RecyclerView para los productos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCarrito"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/tvTituloCarrito"
        android:layout_above="@id/tvTotal" /> <!-- Asegura que el RecyclerView esté por encima del total -->

    <!-- Total -->
    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="74dp"
        android:text="Total: $0.00"
        android:textSize="18sp" />
</RelativeLayout>
