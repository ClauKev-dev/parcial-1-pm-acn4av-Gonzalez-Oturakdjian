<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="8dp"
    android:paddingTop="1dp">

    <!-- ðŸ”½ BOTTOM NAVIGATION (con todas las tabs adentro) -->
    <LinearLayout
        android:id="@+id/bottom_nav_container"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- TAB HOME -->
        <LinearLayout
            android:id="@+id/tab_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                app:tint="#70CC7C"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- TAB DESCUENTOS -->
        <LinearLayout
            android:id="@+id/tab_descuentos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_discount" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descuentos"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- ESPACIO PARA EL BOTÃ“N CENTRAL -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!-- TAB LOOTBOX -->
        <LinearLayout
            android:id="@+id/tab_cuadrado"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_box"
                app:tint="#70CC7C"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lootbox"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- TAB MENÃš -->
        <LinearLayout
            android:id="@+id/tab_menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_menu"
                app:tint="#70CC7C" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MenÃº"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- ðŸ›’ BOTÃ“N CENTRAL FLOTANTE -->
    <!-- ðŸ›’ BOTÃ“N CENTRAL FLOTANTE AJUSTADO -->
    <LinearLayout
        android:id="@+id/tab_tienda"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/circle_background"
        android:gravity="center"
        android:orientation="vertical"
        android:elevation="12dp"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:translationY="40dp">

        <ImageView
            android:id="@+id/iv_cart"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_store"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/tv_cart_count"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/circle_red"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:gravity="center"
            android:visibility="gone"
            android:translationX="15dp"
            android:translationY="-5dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
